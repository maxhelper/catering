# ===========================================
# Catering Site - Environment Configuration
# ===========================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env

# -------------------------------------------
# Безопасность
# -------------------------------------------

# Пароль для входа в админ-панель (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
ADMIN_PASSWORD=your_secure_password_here

# Секретный ключ для CSRF-токенов (сгенерируйте случайную строку)
CSRF_SECRET=generate_random_32_char_string_here

# -------------------------------------------
# Пути к файлам
# -------------------------------------------

# Директория для загруженных файлов (относительно admin/)
UPLOADS_DIR=uploads

# Путь к JSON-файлу с мероприятиями
EVENTS_JSON=events.json

# Путь к JSON-файлу с боксами
BOXES_JSON=boxes.json

# -------------------------------------------
# API и CORS
# -------------------------------------------

# Разрешённые домены для CORS (через запятую)
# Пример: https://example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=*

# Базовый URL сайта (для генерации ссылок на изображения)
SITE_URL=http://localhost:8000

# -------------------------------------------
# Загрузка файлов
# -------------------------------------------

# Максимальный размер загружаемого файла (в байтах)
# 10MB = 10485760
MAX_UPLOAD_SIZE=10485760

# Разрешённые расширения файлов (через запятую)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# -------------------------------------------
# Режим разработки
# -------------------------------------------

# Включить режим отладки (true/false)
# ВНИМАНИЕ: отключите в продакшене!
DEBUG_MODE=false

# Показывать ошибки PHP (true/false)
DISPLAY_ERRORS=false

# -------------------------------------------
# Framer интеграция (опционально)
# -------------------------------------------

# URL Framer-проекта для синхронизации
FRAMER_PROJECT_URL=https://framer.com/remix/bkjLol05nqDUwPuS7FKF
